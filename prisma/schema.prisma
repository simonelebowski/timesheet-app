// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                Int         @id @default(autoincrement())
  email             String      @unique
  name              String
  role              String      @default("teacher") // "teacher", "staff", "admin", etc.
  hourlyRate        Float?      // nullable; only needed for some roles
  canSubmitTimesheet Boolean    @default(true)
  active            Boolean     @default(true)
  timesheets        Timesheet[]
}

model Timesheet {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  month      String   // "YYYY-MM"
  totalHours Float
  notes      String?
  payload    Json     // full canonicalPayload JSON
  createdAt  DateTime @default(now())

  @@unique([userId, month]) // one timesheet per user per month
}
